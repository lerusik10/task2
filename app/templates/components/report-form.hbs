<form class="edit-form" onsubmit={{action "submitForm"}}>    
    <div class="border border-dark rounded p-4 mb-4">
        <h2 class="text-center">Добавление доклада</h2>            
        <div class="form-group row">
            <label for="inputTitle" class="col-sm-2 col-form-label text-right">Дата доклада</label>
            <div class="col-sm-10">
                {{input-date meetingDate=(moment-format model.report.date 'DD.MM.YYYY')}}
            </div>
        </div>
        <div class="form-group row">
            <label for="inputTitle" class="col-sm-2 col-form-label text-right">Спикер</label>
            <div class="dropdown col-sm-10">
                {{#power-select 
                    options=model.speakers 
                    selected=speaker
                    onchange=(action "changeSpeaker")
                    searchField="fullName"
                    allowClear=true 
                    as |speaker|
                }}
                    {{speaker.fullName}}
                {{/power-select}}                             
            </div>
        </div>
        <div class="form-group row">
            <label for="inputTitle" class="col-sm-2 col-form-label text-right">Книга</label>
            <div class="dropdown col-sm-10">
                {{#power-select
                    options=model.books
                    selected=book
                    onchange=(action "changeBook")
                    searchField="nameWithAuthor"
                    allowClear=true
                    as |book|
                }}
                    {{book.nameWithAuthor}}
                {{/power-select}}
            </div>
        </div>            
        <div class="form-group row">
            <label for="inputTitle" class="col-sm-2 col-form-label text-right">Описание книги</label>
            <div class="col-sm-10">
                {{input type="text" class="form-control form-control-lg" id="inputTitle" placeholder="Описание книги" value = review}}
            </div>
        </div>            
        <div class="form-group row">
            <label for="inputPagesCount" class="col-sm-2 col-form-label text-right">Оценка книги</label>
            <div class="col-sm-10">
                {{input type="number" class="form-control form-control-lg" id="inputPagesCount" placeholder="Оценка книги" value = grade}}
            </div>
        </div>
        <div class="form-group row">
            <label for="inputDescriptionURL" class="col-sm-2 col-form-label text-right">Ссылка на видео</label>
            <div class="col-sm-10">
                {{input type="url" class="form-control form-control-lg" id="inputDescriptionURL" placeholder="Ссылка на видео" value = urlVideo}}
            </div>
        </div>
        <div class="form-group row">
            <label for="inputDescriptionURL2" class="col-sm-2 col-form-label text-right">Ссылка на презентацию</label>
            <div class="col-sm-10">
                {{input type="url" class="form-control form-control-lg" id="inputDescriptionURL2" placeholder="Ссылка на презентацию" value = urlPresentation}}
            </div>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-12 text-right">
            <button type="submit" class="btn btn-primary btn-lg">Сохранить</button>
            {{#link-to "meeting" class="btn btn-outline-secondary btn-lg"}}Отмена{{/link-to}}
        </div>
    </div>
</form>